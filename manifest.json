{
  "manifest_version": 3,
  "name": "Auto Scroll and Reload",
  "version": "1.0",
  "description": "Automatically scrolls down a webpage and reloads when it reaches the bottom.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
